extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug


block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5 
        .row 
            .col-12 
                +box-head(pageTitle)

            .col-12 
                .chat(my-id=user.id)
                    .inner-body
                        each chat in chats 
                            div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                                .inner-incoming
                                    if(chat.infoUser.id != user.id)
                                        .inner-name #{chat.infoUser.fullName}
                                    .inner-content
                                        | #{chat.content}
                    .inner-foot
                    form(
                        class='inner-form' 
                        action="" 
                        method="POST"
                    )
                        input(
                            type="text" 
                            placeholder="Nhập nội dung..." 
                            name="content"
                        )
                        span(class='button-icon btn btn-light mx-2') <i class="fa-regular fa-face-smile"></i> 
                        button(type="submit")
                            i.fa-solid.fa-paper-plane

    div(class="tooltip" role="tooltip")
        emoji-picker(class="light")
