extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)


    .container.my-5 
        .row 
            .col-12 
                +box-head(pageTitle)
            .col-12
                form(
                    action=`/user/edit?_method=PATCH`
                    method="POST" 
                    enctype="multipart/form-data"
                )

                    div(class="form-group")
                        label(for="fullName") Họ tên *
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            placeholder="Nguyen Van A"
                            value=user.fullName
                            required
                    )

                    div(class="form-group")
                        label(for="email") Email *
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="abc@gmail.com"
                            value=user.email
                            required
                    )

                    div(class="form-group")
                        label(for="password") Mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                    )

                    div(class="form-group")
                        label(for="phone") Số điện thoại *
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            value=user.phone
                            required
                    )

                    div(
                        class="form-group"
                        upload-image
                    )
                        label(for="avatar") Avatar
                        br
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-image-input
                        )
                        br
                        img(
                            src=(user.avatar ? user.avatar : "")
                            upload-image-preview
                            class="image-preview"
                        )
                        br

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Chỉnh sửa

    //- script(src="/js/script.js") 