extend ../../layouts/default.pug
include ../../mixins/filter-status
include ../../mixins/pagination
include ../../mixins/form-change-multi
include ../../mixins/alert

block main
    +alert-success(500)

    h1 #{pageTitle}

    .card.mb-3
        card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-6

    .card.mb-3
        card-header #{pageTitle}
        .card-body
            .row 
                .col-8
                    +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)

            table(
                class=".table .table-hover .table-lg"
                checkbox-multi
            )
                thead
                    tr
                        th 
                            input(type="checkbox" name="checkall")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Hành động
                tbody
                    each item, index in products
                        tr
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value=item.id
                                )
                            td #{index + 1}
                            td
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price} $
                            td
                                input(
                                    type="number"
                                    value=item.position
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                )
                            td
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id=item.id 
                                    button-delete-hard
                                ) Xóa
                                button(
                                    class="btn btn-success btn-sm ml-1"
                                    data-id=item.id 
                                    button-restore
                                ) Khôi Phục
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-delete-item-hard"
        data-path=`${prefixAdmin}/products/deleteHard`
    ) 

    form(
        action=""
        method="POST"
        id="form-restore-item"
        data-path=`${prefixAdmin}/products/restore`
    ) 

    script(src="/admin/js/product.js") 